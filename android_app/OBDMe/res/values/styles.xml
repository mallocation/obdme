<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="setupwizard.header" parent="android:Theme">
		<item name="android:textSize">30dip</item>
		<item name="android:padding">10dip</item>
	</style>
	<style name="setupwizard.body" parent="android:Theme">
		<item name="android:textSize">15dip</item>
		<item name="android:padding">10dip</item>
	</style>
	<style name="setupwizard.button" parent="android:Theme">
		<item name="android:textSize">15dip</item>
	</style>

	<style name="setupwizard.list" parent="android:Theme">
		<item name="android:textSize">25dip</item>
		<item name="android:padding">10dip</item>
	</style>
	<style name="setupwizard.body.bluetooth" parent="setupwizard.body">
		<item name="android:layout_height">90dip</item>
	</style>
	<style name="bluetooth.discovery.list" parent="android:Theme">
		<item name="android:background">#fff</item>
		<item name="android:paddingLeft">5dip</item>
		<item name="android:textColor">#666</item>
		<item name="android:textSize">15dip</item>
	</style>
	<style name="setupwizard.vehicle" parent="android:Theme">
		<item name="android:textSize">15dip</item>
		<item name="android:padding">0dip</item>
	</style>
		<style name="setupwizard.vehicle.vin" parent="android:Theme">
		<item name="android:textSize">30dip</item>
		<item name="android:padding">0dip</item>
	</style>

	<!-- No Device Connected Screen -->
	<style name="noDeviceConnectedStyle" parent="@android:style/TextAppearance.Medium">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textSize">60sp</item>
	</style>

	<!-- Basic Data Display -->
	<style name="mainValueName" parent="@android:style/TextAppearance.Medium">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textSize">30sp</item>
	</style>
	<style name="mainValue" parent="@android:style/TextAppearance.Medium">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textSize">70sp</item>
	</style>
	
	<!-- Mechanic Mode Style -->
	<style name="mechanicMode.list" parent="android:Theme">
		<item name="android:background">#fff</item>
		<item name="android:paddingLeft">5dip</item>
		<item name="android:textColor">#666</item>
		<item name="android:textSize">15dip</item>
	</style>
</resources>
