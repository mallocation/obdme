<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<TextView android:id="@+id/btdiscovery.title.paireddevices"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:text="@string/btdiscovery.title.paireddevices.text"
		android:visibility="gone" style="@style/bluetooth.discovery.list" />
	<ListView android:id="@+id/btdiscovery.paireddevices"
		android:layout_width="fill_parent" android:layout_weight="0"
		android:layout_height="wrap_content" />
	<TextView android:id="@+id/btdiscovery.title.newdevices"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:text="@string/btdiscovery.title.newdevices.text"
		android:visibility="gone" style="@style/bluetooth.discovery.list" />
	<ListView android:id="@+id/btdiscovery.newdevices"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:layout_weight="1" />
	<Button android:id="@+id/btdiscovery.button.scan"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:text="@string/btdiscovery.button.scan.text" />
</LinearLayout>